@model FarmacyMedic.Models.DTO.ProductCreationDto


@{
    ViewData["Title"] = "Create Product";
}
<br />
<h1 class="col-md-12 text-center">
    Create Product</h1>
<br />
@using (Html.BeginForm("Create", "Product"))
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description)
            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Stock)
            @Html.TextBoxFor(model => model.Stock, new { @class = "form-control" , required = "required"})
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Price)
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control" , required = "required"})
    </div>
    <br />
    <button type="submit" value="Create" class="btn btn-primary">Create </button>
}

@if (ViewBag.ProductCreated != null)
{
    <div class="alert alert-success">
        Product created successfully!
    </div>
}